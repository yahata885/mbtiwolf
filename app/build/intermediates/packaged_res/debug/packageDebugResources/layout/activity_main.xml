<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テーマを選択"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/themeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/mbtiRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBTI"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/loveTypeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恋愛タイプ"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="モードを選択"
        android:textSize="20sp"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/mode1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="モード1: 協力して推測"/>

    <Button
        android:id="@+id/mode2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="モード2: 演じて推測"/>

    <Button
        android:id="@+id/mode3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="モード3: 人狼モード"/>

</LinearLayout>