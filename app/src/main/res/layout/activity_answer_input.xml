<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerInputActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/guesserNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="回答入力" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#808080"
                android:contentDescription="役職説明"
                android:text="役職説明"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/answerFieldsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/confirmAnswersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                tools:text="回答を確定" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/roleExplanationOverlayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/roleExplanationCard"
            android:layout_width="339dp"
            android:layout_height="554dp"
            android:layout_margin="32dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <LinearLayout
                android:id="@+id/role1_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/role1_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    tools:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/role1_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="役職1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role1_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="（ここに説明文）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/role2_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/role2_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    tools:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/role2_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="役職2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role2_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="（ここに説明文）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/role3_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline">

                <ImageView
                    android:id="@+id/role3_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    tools:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/role3_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="役職3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role3_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="（ここに説明文）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/role4_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline">

                <ImageView
                    android:id="@+id/role4_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    tools:src="@android:drawable/sym_def_app_icon" />

                <TextView
                    android:id="@+id/role4_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal"
                    android:text="役職4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/role4_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="（ここに説明文）" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/closeRoleExplanationButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="✖"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/roleExplanationCard"
            app:layout_constraintTop_toTopOf="@id/roleExplanationCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>