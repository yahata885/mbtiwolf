<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- 「テーマを選択」タイトル -->
    <TextView
        android:id="@+id/textViewThemeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テーマを選択"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- テーマ画像を表示するViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/themeViewPager"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewThemeTitle"
        app:layout_constraintStart_toEndOf="@+id/buttonPrevious"
        app:layout_constraintEnd_toStartOf="@+id/buttonNext"
        app:layout_constraintWidth_percent="0.7" /> <!-- 横幅を70%に制限 -->

    <!-- 左矢印ボタン (◀︎) -->
    <ImageButton
        android:id="@+id/buttonPrevious"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/indicator_left_default"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="前のテーマへ"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/themeViewPager"
        app:layout_constraintTop_toTopOf="@id/themeViewPager"
        app:layout_constraintBottom_toBottomOf="@id/themeViewPager"
        app:tint="?attr/colorOnSurface" />

    <!-- 右矢印ボタン (▶︎) -->
    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/indicator_right_default"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="次のテーマへ"
        app:layout_constraintStart_toEndOf="@id/themeViewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/themeViewPager"
        app:layout_constraintBottom_toBottomOf="@id/themeViewPager"
        app:tint="?attr/colorOnSurface" />

    <!-- テーマ名表示 -->
    <TextView
        android:id="@+id/themeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="テーマ : MBTI"
        app:layout_constraintTop_toBottomOf="@+id/themeViewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 「モードを選択」タイトル -->
    <TextView
        android:id="@+id/textViewModeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="モードを選択"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/themeNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- モード選択ボタン -->
    <Button
        android:id="@+id/mode1Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="モード1: 協力"
        app:layout_constraintTop_toBottomOf="@+id/textViewModeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mode2Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="モード2: 演じて"
        app:layout_constraintTop_toBottomOf="@+id/mode1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mode3Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="モード3: 人狼"
        app:layout_constraintTop_toBottomOf="@+id/mode2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
