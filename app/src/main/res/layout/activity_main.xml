<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テーマを選択"
        android:textSize="20sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/themeViewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/indicatorLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/indicator_left_selected"/>

        <ImageView
            android:id="@+id/indicatorRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/indicator_right_default"/>

    </LinearLayout>

    <TextView
        android:id="@+id/themeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="MBTI" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="モードを選択"
        android:textSize="20sp"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/mode1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="モード1: 協力"/>

    <Button
        android:id="@+id/mode2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="モード2: 演じて"/>

    <Button
        android:id="@+id/mode3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="モード3: 人狼"/>

</LinearLayout>