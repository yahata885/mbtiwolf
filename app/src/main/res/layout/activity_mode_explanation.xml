<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".ModeExplanation_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ゲームモード説明"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/modeSelectionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/mode1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="協力/演じて"
            android:checked="true"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/mode3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人狼" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/explanationContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"> <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp" app:cardElevation="4dp"   app:cardUseCompatPadding="true" android:layout_margin="8dp" app:cardBackgroundColor="@android:color/white" > <LinearLayout
                android:id="@+id/mode12ExplanationBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp" android:visibility="gone"
                tools:visibility="visible"> <TextView
                android:id="@+id/mode12TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ほかの人の性格を\n当てるゲームモード"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/mode12ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/discussion"
                    android:contentDescription="モード1の画像" />

                <TextView
                    android:id="@+id/mode12TextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会話を通して\nほかの人の性格を予想しよう"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#D9D9D9"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/mode1TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="モード1:「協力」の場合"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode1TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自身の性格を意識しながら\n会話しよう"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#D9D9D9"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/mode2TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="モード2:「演じて」の場合"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode2TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="想像力を膨らませながら指定された性格になりきって会話しよう"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white" >

                <LinearLayout
                    android:id="@+id/mode3ExplanationBlock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/mode3TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="市民側と人狼側に分かれて\n相手陣営を予想するゲームモード"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mode3ImageView1_1"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="2"
                            android:contentDescription="モード3の画像1-1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/gutspose" />

                        <ImageView
                            android:id="@+id/mode3ImageView1_2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:contentDescription="モード3の画像1-2"
                            android:scaleType="fitCenter"
                            android:src="@drawable/vs" />

                        <ImageView
                            android:id="@+id/mode3ImageView1_3"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="2"
                            android:contentDescription="モード3の画像1-3"
                            android:scaleType="fitCenter"
                            android:src="@drawable/wolf" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        android:background="#E3F2FD"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/mode3ImageView_citizen"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:contentDescription="市民側の画像"
                            android:scaleType="fitCenter"
                            android:src="@drawable/badeye" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mode3TextView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="市民側"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mode3TextView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="指定された性格を演じ\nながら人狼を探します"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="#FFEBEE"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mode3TextView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="人狼側"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mode3TextView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="市民の性格を予想しながら演じます"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/mode3ImageView_wolf"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:contentDescription="人狼側の画像"
                            android:scaleType="fitCenter"
                            android:src="@drawable/faker" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>

    <Button
        android:id="@+id/backToTitleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る"
        android:layout_marginTop="16dp" />

</LinearLayout>