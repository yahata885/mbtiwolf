<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".ModeExplanationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ゲームモード説明"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/modeSelectionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/mode1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="協力/演じて"
            android:checked="true"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/mode3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人狼" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/explanationContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/mode12ExplanationBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/mode12TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ほかの人の性格を\n当たるゲームモード"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/mode12ImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/discussion"
                        android:contentDescription="モード1の画像" />

                    <TextView
                        android:id="@+id/mode12TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="会話を通して\nほかの人の性格を予想しよう"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode1TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="「協力」の場合"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode1TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自身の性格を意識しながら会話しよう"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode2TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="「演じて」の場合"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/mode2TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="想像力を膨らませながら指定された性格になりきって会話しよう"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mode3ExplanationBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/mode3TextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="市民側と人狼側に分かれて\n相手陣営を予想するゲームモード"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/mode3ImageView1_1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/gutspose"
                            android:contentDescription="モード3の画像1-1" />

                        <ImageView
                            android:id="@+id/mode3ImageView1_2"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/vs"
                            android:contentDescription="モード3の画像1-2" />

                        <ImageView
                            android:id="@+id/mode3ImageView1_3"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/wolf"
                            android:contentDescription="モード3の画像1-3" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mode3TextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="市民側"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode3TextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="指定された性格を\n演じながら人狼を探します"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode3TextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="人狼側"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/mode3TextView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="市民の性格を予想しながら演じます"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/mode3ImageView2_1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/badeye"
                            android:contentDescription="モード3の画像2-1" />

                        <ImageView
                            android:id="@+id/mode3ImageView2_2"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/faker"
                            android:contentDescription="モード3の画像2-2" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>